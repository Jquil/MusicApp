<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_x"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.SettingActivity">

    <include
        android:id="@+id/include_toolbar"
        layout="@layout/component_toolbar"/>
    
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="?attr/actionBarSize"
        app:layout_constraintTop_toBottomOf="@id/include_toolbar">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_basic_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardCornerRadius="10dp"
                app:contentPadding="10dp"
                app:cardBackgroundColor="@color/background"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="10dp">
                    <TextView
                        android:id="@+id/tv_title_basic_info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Basic info"
                        android:textStyle="bold"
                        android:textSize="22dp"
                        android:textColor="@color/theme"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:orientation="vertical"
                        app:layout_constraintTop_toBottomOf="@id/tv_title_basic_info">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:paddingRight="10dp"
                                android:text="okhttp request timeout"
                                android:textColor="@color/white"/>
                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/input_okhttp_request_timeout"
                                android:layout_width="60dp"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="5dp"
                                android:layout_height="wrap_content"
                                android:inputType="number"
                                android:textColor="@color/white"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="ms"
                                android:textColor="@color/white"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:paddingRight="10dp"
                                android:text="ffmpeg parse timeout"
                                android:textColor="@color/white"/>
                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/input_ffmpeg_parse_timeout"
                                android:layout_width="60dp"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="5dp"
                                android:layout_height="wrap_content"
                                android:inputType="number"
                                android:textColor="@color/white"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="ms"
                                android:textColor="@color/white"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:paddingRight="10dp"
                                android:layout_gravity="center"
                                android:text="ffmpeg parse quality audition"
                                android:textColor="@color/white"/>
                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/menu_fpg_quality_audition"
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                style="@style/Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu">

                                <AutoCompleteTextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/white"
                                    android:textColorHint="@color/white"
                                    android:inputType="none"/>

                            </com.google.android.material.textfield.TextInputLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:paddingRight="10dp"
                                android:layout_gravity="center"
                                android:text="ffmpeg parse quality of upload to cloud disk"
                                android:textColor="@color/white"/>
                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/menu_fpg_quality_upload"
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:backgroundTint="@color/black"
                                style="@style/Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu">

                                <AutoCompleteTextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/white"
                                    android:textColorHint="@color/white"
                                    android:inputType="none"/>

                            </com.google.android.material.textfield.TextInputLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:paddingRight="10dp"
                                android:layout_gravity="center"
                                android:text="default search source"
                                android:textColor="@color/white"/>
                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/menu_default_search_source"
                                android:layout_width="180dp"
                                android:layout_height="wrap_content"
                                style="@style/Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu">

                                <AutoCompleteTextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/white"
                                    android:textColorHint="@color/white"
                                    android:inputType="none"/>

                            </com.google.android.material.textfield.TextInputLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:paddingRight="10dp"
                                android:layout_gravity="center"
                                android:text="sync platform data"
                                android:textColor="@color/white"/>
                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/menu_sync_platform_data"
                                android:layout_width="180dp"
                                android:layout_height="wrap_content"
                                style="@style/Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu">

                                <AutoCompleteTextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/white"
                                    android:textColorHint="@color/white"
                                    android:inputType="none"/>

                            </com.google.android.material.textfield.TextInputLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:paddingRight="10dp"
                                android:layout_gravity="center"
                                android:text="auto change platform when get play url error"
                                android:textColor="@color/white"/>
                            <com.google.android.material.switchmaterial.SwitchMaterial
                                android:id="@+id/sm_auto_change_platform"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:paddingRight="10dp"
                                android:layout_gravity="center"
                                android:text="auto change platform"
                                android:textColor="@color/white"/>
                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/menu_auto_change_platform"
                                android:layout_width="180dp"
                                android:layout_height="wrap_content"
                                style="@style/Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu">

                                <AutoCompleteTextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/white"
                                    android:textColorHint="@color/white"
                                    android:inputType="none"/>

                            </com.google.android.material.textfield.TextInputLayout>
                        </LinearLayout>
                    </LinearLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_platform_config"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardCornerRadius="10dp"
                app:contentPadding="10dp"
                app:cardBackgroundColor="@color/background"
                app:layout_constraintTop_toBottomOf="@id/cv_basic_info">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_title_platform_config"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Platform config"
                        android:textStyle="bold"
                        android:textSize="22dp"
                        android:textColor="@color/theme"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="5dp"
                        app:layout_constraintTop_toBottomOf="@id/tv_title_platform_config">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="[1] NetEaseCloud music"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:paddingTop="20dp"
                            android:paddingLeft="15dp"
                            android:paddingBottom="20dp"
                            android:clickable="true"
                            android:background="?android:attr/selectableItemBackground"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="[2] QQ music"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:paddingTop="20dp"
                            android:paddingLeft="15dp"
                            android:paddingBottom="20dp"
                            android:layout_marginTop="10dp"
                            android:clickable="true"
                            android:background="?android:attr/selectableItemBackground"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="[3] Kugou music"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:layout_marginTop="10dp"
                            android:paddingTop="20dp"
                            android:paddingLeft="15dp"
                            android:paddingBottom="20dp"
                            android:clickable="true"
                            android:background="?android:attr/selectableItemBackground"/>
                        <TextView
                            android:id="@+id/link_config_kuwo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="[4] Kuwo music"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:layout_marginTop="10dp"
                            android:paddingTop="20dp"
                            android:paddingLeft="15dp"
                            android:paddingBottom="20dp"
                            android:clickable="true"
                            android:background="?android:attr/selectableItemBackground"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="[5] Memfire database"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:layout_marginTop="10dp"
                            android:paddingTop="20dp"
                            android:paddingLeft="15dp"
                            android:paddingBottom="20dp"
                            android:clickable="true"
                            android:background="?android:attr/selectableItemBackground"/>
                    </LinearLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:id="@+id/layout_space"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:orientation="vertical"
                app:layout_constraintTop_toBottomOf="@id/cv_platform_config"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>