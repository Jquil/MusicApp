<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_x"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <include
        android:id="@+id/include_toolbar"
        layout="@layout/component_toolbar"/>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="?attr/actionBarSize"
        app:layout_constraintTop_toBottomOf="@id/include_toolbar">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="20dp">
            <androidx.cardview.widget.CardView
                android:id="@+id/cv_basic_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardCornerRadius="10dp"
                app:contentPadding="10dp"
                app:cardBackgroundColor="@color/background"
                app:layout_constraintTop_toTopOf="parent">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="10dp">
                    <TextView
                        android:id="@+id/tv_title_basic_info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="基本设置"
                        android:textStyle="bold"
                        android:textSize="22dp"
                        android:textColor="@color/theme"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:orientation="vertical"
                        app:layout_constraintTop_toBottomOf="@id/tv_title_basic_info">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:paddingRight="10dp"
                                android:text="接口请求超时时间(ms)"
                                android:textColor="@color/white"/>
                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/input_okhttp_request_timeout"
                                android:layout_width="60dp"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="5dp"
                                android:layout_height="wrap_content"
                                android:inputType="number"
                                android:textColor="@color/white"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:paddingRight="10dp"
                                android:text="失败最多重试次数"
                                android:textColor="@color/white"/>
                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/input_max_retry_count"
                                android:layout_width="60dp"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="5dp"
                                android:layout_height="wrap_content"
                                android:inputType="number"
                                android:textColor="@color/white"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:paddingRight="10dp"
                                android:text="退出应用自动清除缓存"
                                android:textColor="@color/white"/>
                            <com.google.android.material.switchmaterial.SwitchMaterial
                                android:id="@+id/sm_exit_clear_cache"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:paddingRight="10dp"
                                android:text="默认搜索平台"
                                android:textColor="@color/white"/>
                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/menu_default_search_platform"
                                android:layout_width="180dp"
                                android:layout_height="wrap_content"
                                style="@style/Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu">

                                <AutoCompleteTextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/white"
                                    android:textColorHint="@color/white"
                                    android:inputType="none"/>

                            </com.google.android.material.textfield.TextInputLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:paddingRight="10dp"
                                android:text="播放失败时自动切换平台"
                                android:textColor="@color/white"/>
                            <com.google.android.material.switchmaterial.SwitchMaterial
                                android:id="@+id/sm_auto_change_platform"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal">
                            <TextView
                                android:id="@+id/tv_config_auto_change_platform"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:paddingTop="10dp"
                                android:paddingBottom="10dp"
                                android:paddingRight="10dp"
                                android:text="自动切换平台配置"
                                android:textColor="@color/white"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:paddingRight="10dp"
                                android:text="使用MediaExtractor提取音频"
                                android:textColor="@color/white" />
                            <com.google.android.material.switchmaterial.SwitchMaterial
                                android:id="@+id/sm_use_media_extractor"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:paddingRight="10dp"
                                android:text="仅允许在wifi情况下使用MediaExtractor"
                                android:textColor="@color/white" />
                            <com.google.android.material.switchmaterial.SwitchMaterial
                                android:id="@+id/sm_use_media_extractor_only_wifi"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>
                    </LinearLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/cv_platform_config"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardCornerRadius="10dp"
                app:contentPadding="10dp"
                app:cardBackgroundColor="@color/background"
                app:layout_constraintTop_toBottomOf="@id/cv_basic_info">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tv_title_platform_config"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="平台设置"
                        android:textStyle="bold"
                        android:textSize="22dp"
                        android:textColor="@color/theme"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="5dp"
                        app:layout_constraintTop_toBottomOf="@id/tv_title_platform_config">
                        <TextView
                            android:id="@+id/link_config_netEaseCloud"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="[1] 网易云音乐"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:paddingTop="20dp"
                            android:paddingLeft="15dp"
                            android:paddingBottom="20dp"
                            android:clickable="true"
                            android:background="?android:attr/selectableItemBackground"/>
                        <TextView
                            android:id="@+id/link_config_qq"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="[2] QQ音乐"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:paddingTop="20dp"
                            android:paddingLeft="15dp"
                            android:paddingBottom="20dp"
                            android:layout_marginTop="10dp"
                            android:clickable="true"
                            android:background="?android:attr/selectableItemBackground"/>
                        <TextView
                            android:id="@+id/link_config_kuwo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="[3] 酷我音乐"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:paddingTop="20dp"
                            android:paddingLeft="15dp"
                            android:paddingBottom="20dp"
                            android:layout_marginTop="10dp"
                            android:clickable="true"
                            android:background="?android:attr/selectableItemBackground"/>
                    </LinearLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>