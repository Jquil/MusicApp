<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/background_x"
    android:paddingTop="15dp"
    android:paddingLeft="15dp"
    android:paddingRight="15dp">
    
    <com.drake.statelayout.StateLayout
        android:id="@+id/state_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:loading_layout="@layout/component_state_loading"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/iv_qr"
                android:background="@color/white"
                android:layout_width="250dp"
                android:layout_height="250dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_authentication"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Authentication"
                android:layout_margin="10dp"
                app:layout_constraintTop_toBottomOf="@id/iv_qr"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>

            <TextView
                android:id="@+id/tv_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:textColor="@color/white"
                android:text="please use your NetEaseCloudMusic app to scan this qr code, click 'Authentication' button when you scan finish"
                app:layout_constraintTop_toBottomOf="@id/btn_authentication"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.drake.statelayout.StateLayout>

</androidx.constraintlayout.widget.ConstraintLayout>